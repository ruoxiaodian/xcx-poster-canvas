/* pages/test/wheel/index.wxss */
.wheel-container{
    position: relative;
    margin: 0 auto;
    border-radius: 100%;
}
.wheel-container .bg{
    position: absolute;
    line-height: 0;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}
.wheel-button-container{
    position: absolute;
    overflow: inherit;
    left: 50%;
    top: 50%;
    margin-left: -100rpx;
    margin-top: -100rpx;
    width: 200rpx;
    height: 200rpx;
    border-radius: 100%;
    box-sizing: border-box;
    background: linear-gradient(to bottom, #f05651, #cc3628);
    z-index: 3;
}
.wheel-button-container .bg2{
    position: absolute;
    left: 20rpx;
    top: 20rpx;
    width: 160rpx;
    height: 160rpx;
    border-radius: 100%;
    background: linear-gradient(to bottom, #cc3628, #f05651);
    z-index: 2;
}
.wheel-button-container .box{
    position: absolute;
    left: 30rpx;
    top: 30rpx;
    right: 30rpx;
    bottom: 30rpx;
    border-radius: 100%;
    background: linear-gradient(to bottom, #fff9ae, #e5a640);
    display:-webkit-box;
    display:-webkit-flex;
    display:flex;
    align-items: center;
    justify-content: center;
    z-index: 3;
}
.wheel-button-container .box-text{
    font-weight: bold;
    text-align: center;
    width: 100%;
    color: #e02739;
}
.wheel-button-container .icon{
    position: absolute;
    width: 60rpx;
    height: 60rpx;
    left: 50%;
    margin-left: -30rpx;
    top: -45rpx;
    z-index: 1;
}